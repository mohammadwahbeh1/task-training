<!DOCTYPE html>
<html>
<head>
  <title>Admin Dashboard</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <div class="container">
    <div class="card">
        <h1 style="text-align:center;">Admin Dashboard</h1>
      
      <% articles.forEach(article => { %>
        <div>
          <h2><%= article.title %></h2>
          <p><%= article.date %></p>
          <div class="admin-actions">
            <a href="/edit/<%= article.id %>">✏️ Edit</a>
            <a href="/delete/<%= article.id %>">🗑️ Delete</a>
          </div>
        </div>
        <hr />
      <% }); %>
      <div class="top-buttons">
        <a href="/new" class="button">➕ New Article</a>
        <a href="/logout" class="button">🚪 Logout</a>
      </div>
    </div>
  </div>
</body>
</html>
